<?xml version="1.0" encoding="UTF-8"?>
<package packagerversion="1.4.10" version="2.0"
  xmlns="http://pear.php.net/dtd/package-2.0"
  xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
                      http://pear.php.net/dtd/tasks-1.0.xsd
                      http://pear.php.net/dtd/package-2.0
                      http://pear.php.net/dtd/package-2.0.xsd">
 <name>BugMiner</name>
 <channel>pear.phpunit.de</channel>
 <summary>Mines a source code repository for bug and churn information.</summary>
 <description>Mines a source code repository for bug and churn information.</description>
 <lead>
  <name>Sebastian Bergmann</name>
  <user>sb</user>
  <email>sb@sebastian-bergmann.de</email>
  <active>yes</active>
 </lead>
 <date>2011-MM-DD</date>
 <version>
  <release>1.0.0</release>
  <api>1.0.0</api>
 </version>
 <stability>
  <release>stable</release>
  <api>stable</api>
 </stability>
 <license>BSD License</license>
 <notes>http://github.com/sebastianbergmann/bugminer/tree</notes>
 <contents>
  <dir name="/">
   <dir name="BugMiner">
    <dir name="TextUI">
     <file baseinstalldir="/" name="Command.php" role="php">
      <tasks:replace from="@package_version@" to="version" type="package-info" />
     </file>
    </dir>
   </dir>
   <file baseinstalldir="/" name="bugminer.php" role="script">
    <tasks:replace from="/usr/bin/env php" to="php_bin" type="pear-config"/>
    <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
    <tasks:replace from="@package_version@" to="version" type="package-info" />
   </file>
   <file baseinstalldir="/" name="bugminer.bat" role="script">
    <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
    <tasks:replace from="@bin_dir@" to="bin_dir" type="pear-config" />
    <tasks:replace from="@package_version@" to="version" type="package-info" />
   </file>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.2.7</min>
   </php>
   <pearinstaller>
    <min>1.9.4</min>
   </pearinstaller>
   <package>
    <name>PHP_Timer</name>
    <channel>pear.phpunit.de</channel>
    <min>1.0.0</min>
   </package>
   <package>
    <name>ConsoleTools</name>
    <channel>components.ez.no</channel>
    <min>1.6</min>
   </package>
  </required>
 </dependencies>
 <phprelease>
  <installconditions>
   <os>
    <name>windows</name>
   </os>
  </installconditions>
  <filelist>
   <install as="bugminer" name="bugminer.php" />
   <install as="bugminer.bat" name="bugminer.bat" />
  </filelist>
 </phprelease>
 <phprelease>
  <filelist>
   <install as="bugminer" name="bugminer.php" />
   <ignore name="bugminer.bat" />
  </filelist>
 </phprelease>
</package>
